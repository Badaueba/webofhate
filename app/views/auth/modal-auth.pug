
div(class="modal fade" id="authModal"  role="dialog" aria-labelledby="authModalLabel" aria-hidden="true")
    div(class="modal-dialog" role="document")
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4(class="modal-title" id="authModalLabel") Signin / Signup
        div(class="modal-body")
          form
            .form-group
              label(class="form-control-label") Username
              input(type="text" placeholder="type your username" class="form-control" id="username")
            
            .form-group
              label(class="form-control-label") Password
              input(type="password" class="form-control" placeholder="type your password" ng-model="profile.userdata.password" class="form-control" id="password")
              
        .modal-footer
          .row
              .col-md-5
                  button(type="button" class="btn btn-primary" id="btn_signin") Signin
              .col-md-4
                  button(type="button" class="btn btn-success" id="btn_signup") Signup
        p(id="serverMessage")